<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SQLiteActivity" >

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nameTextView"
        android:layout_marginRight="38dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/emailTextView"
        android:layout_toRightOf="@+id/emailTextView"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="15dp"
        android:text="Email" />

    <Button
        android:id="@+id/sqliteB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailTextView"
        android:layout_below="@+id/emailEditText"
        android:layout_marginTop="21dp"
        android:text="Update Squlite Button" />

    <Button
        android:id="@+id/viewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sqliteB"
        android:layout_alignBottom="@+id/sqliteB"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/sqliteB"
        android:text="View" />

    <TextView
        android:id="@+id/rowIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sqliteB"
        android:layout_below="@+id/sqliteB"
        android:layout_marginTop="15dp"
        android:text="Row ID" />

    <Button
        android:id="@+id/getInfoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rowIDText"
        android:layout_below="@+id/rowIDText"
        android:layout_marginTop="35dp"
        android:text="Get Info" />

    <Button
        android:id="@+id/editEntryB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/getInfoB"
        android:layout_alignBottom="@+id/getInfoB"
        android:layout_centerHorizontal="true"
        android:text="Edit Entry" />

    <Button
        android:id="@+id/deleteEntryB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/getInfoB"
        android:layout_below="@+id/getInfoB"
        android:layout_marginTop="15dp"
        android:text="Delete Entry" />

    <EditText
        android:id="@+id/rowIDEText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rowIDText"
        android:layout_toRightOf="@+id/getInfoB"
        android:ems="10"
        android:inputType="number" />

</RelativeLayout>
